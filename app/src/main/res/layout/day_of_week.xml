<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/timercodition_item_bgcolor"
    android:baselineAligned="false"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/week_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/timercondition_year_tilte_height"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/timercondition_year_tilte_padding"
        android:paddingRight="@dimen/timercondition_year_tilte_padding"
        android:baselineAligned="false"
        android:gravity="center" >

        <ImageView
            android:id="@+id/week_month_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_arrow_left_selector"
            android:contentDescription="@string/timer" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/week_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/timercodition_yearname_bgcolor"
                android:textSize="@dimen/timercondition_year_tilte_textsize" />

            <TextView
                android:id="@+id/week_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/timercodition_yearname_bgcolor"
                android:textSize="@dimen/timercondition_year_tilte_textsize" />
        </LinearLayout>

        <ImageView
            android:id="@+id/week_month_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_arrow_right_selector"
            android:contentDescription="@string/timer" />
    </RelativeLayout>

    <View
        android:id="@+id/week_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/timercondition_line_height"
        android:layout_below="@id/week_title_layout"
        android:layout_marginLeft="@dimen/timercondition_line_margin"
        android:layout_marginRight="@dimen/timercondition_line_margin"
        android:background="@color/timercodition_line_bgcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_line"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/week_0"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/seven"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_1"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/one"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/two"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_3"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/three"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_4"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/four"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_5"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/five"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week_6"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/six"
            android:textColor="@color/timercodition_time_bgcolor"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>