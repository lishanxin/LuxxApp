<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:alpha="0.82">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#a0a0a0"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/bg_color"
        android:alpha="0.82">
        <LinearLayout
            android:id="@+id/equipment_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/equipment_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dip"
                android:src="@drawable/icon_menu01_link" />

            <TextView
                android:id="@+id/equipment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/tab_she_bei"
                android:textColor="#F28c08"
                android:background="@android:color/transparent"
                android:textSize="11sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/smart_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:theme="@android:style/Widget.RatingBar"
            android:visibility="gone">

            <ImageView
                android:id="@+id/smart_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:src="@drawable/icon_menu02_link" />

            <TextView
                android:id="@+id/smart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/zhi_neng"
                android:textColor="#F28c08"
                android:textSize="14dip" />
        </LinearLayout>

        <!-- <TextView -->
        <!-- android:id="@+id/message" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_weight="1" -->
        <!-- android:drawableTop="@drawable/icon_top_list" -->
        <!-- android:gravity="center" -->
        <!-- android:paddingTop="5dip" -->
        <!-- android:text="信息" -->
        <!-- android:textColor="#ffffffff" -->
        <!-- android:textSize="14dip" /> -->

        <LinearLayout
            android:id="@+id/setting_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/setting_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:src="@drawable/icon_menu03_link" />

            <TextView
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/tab_set"
                android:textColor="#F28c08"
                android:layout_marginTop="5dp"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>