<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/connected_port_icon"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_lan" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/connected_port_icon" >

        <TextView
            android:id="@+id/conn_port_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/conn_port_total_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conn_port_name"
            android:layout_marginLeft="12dp"
            android:text="6.6M"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/conn_port_data_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conn_port_name"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/conn_port_total_data"
            android:text="28.3M"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/connected_port_show_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_arrow" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/connected_port_icon"
        android:background="#ffdddddd" />

</RelativeLayout>