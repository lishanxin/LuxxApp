<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_view_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TitleLayoutStyle" >

        <TextView
            style="@style/TextInTitleStyle"
            android:text="@string/access_wirless_network" />

        <ImageView
            android:id="@+id/back"
            style="@style/BackInTitleStyle"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/save"
            style="@style/MenuInTitleStyle"
            android:background="@null"
            android:text="@string/save"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <TextView
        style="@style/TextStyleInverse"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/select_wirless" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_view_bg"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/wirless_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/password"
                style="@style/EditStyle"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:hint="@string/password_hint" 
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>