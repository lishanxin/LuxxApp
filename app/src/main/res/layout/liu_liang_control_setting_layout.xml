<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_view_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TitleLayoutStyle" >

        <TextView
            android:id="@+id/text_in_title"
            style="@style/TextInTitleStyle"
            android:text="@string/liu_liang_contal" />

        <ImageView
            android:id="@+id/back"
            style="@style/BackInTitleStyle"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/save"
            style="@style/BackInTitleStyle"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="@string/save"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:text="@string/signal_add"
            android:textColor="#ff000000"
            android:textSize="20dip"
            android:textStyle="bold" />

        <Button
            android:id="@+id/jian"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:text="@string/signal_Minus"
            android:textColor="#ff000000"
            android:textSize="20dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/jian"
            android:layout_toRightOf="@id/add"
            android:background="#ffffffff"
            android:hint="@string/input_liu_liang_zhi"
            android:textColor="#ff000000"
            android:textSize="20dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/cancel"
        style="@style/BackInTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/cancel_liu_liang_control"
         android:textSize="16dip"
        android:textColor="#ff000000" />

</LinearLayout>