<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center_vertical">
    
    <TextView 
        android:id="@+id/timer_item_tip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/timer_item_height_half"
        android:text="@string/open"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/timer_name_default_textcolor"
        android:textSize="@dimen/timer_item_tip_textsize"/>

    <TextView 
        android:id="@+id/timer_item_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/timer_item_height_half"
        android:layout_marginLeft="@dimen/timer_item_time_marginleft"
        android:layout_toRightOf="@id/timer_item_tip"
        android:textColor="@color/timer_time_default_textcolor"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textSize="@dimen/timer_item_time_textsize"/>
</RelativeLayout>
