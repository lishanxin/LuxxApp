<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="96dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/scene_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/scene_default_bg" >

        <TextView
            android:id="@+id/scene_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/scene_item_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="8"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/scene_item_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_selected"
            android:contentDescription="@string/scene"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/scene_item_loadding"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/anim_loading"
            android:contentDescription="@string/scene"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/scene_item_space"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/scene_item_icon"
        android:background="@android:color/transparent"
        android:visibility="gone" />

</RelativeLayout>