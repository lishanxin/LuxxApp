<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B6B6B6" />

    <TextView
        style="@style/TextStyleInverse"
        android:layout_marginBottom="@dimen/edittext_padding_left_right"
        android:layout_marginLeft="@dimen/advance_settings_marginLeft"
        android:layout_marginRight="@dimen/advance_settings_marginLeft"
        android:layout_marginTop="@dimen/edittext_padding_left_right"
        android:text="@string/wireless_encryption_type" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B6B6B6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/advance_settings_marginLeft"
        android:paddingRight="@dimen/advance_settings_marginLeft"
        android:paddingTop="@dimen/edittext_margin_top_bottom"
        android:paddingBottom="@dimen/edittext_margin_top_bottom"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextStyleInverse"
            android:background="@android:color/transparent"
            android:text="@string/wireless_wep_encryption_mode" 
            android:textColor="@color/blackColor"/>

        <TextView
            android:id="@+id/wireless_WEP_encryption_mode"
            style="@style/TextStyleInverse"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/wireless_text_draw_padding"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical|right"
            android:text="@string/select_wirless" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/advance_settings_marginLeft"
        android:layout_marginRight="@dimen/advance_settings_marginLeft"
        android:background="#B6B6B6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/advance_settings_marginLeft"
        android:layout_marginRight="@dimen/advance_settings_marginLeft"
        android:layout_marginTop="@dimen/edittext_padding_left_right"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/wireless_wep_password_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/wireless_wep_password_radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/wireless_wep_password_1"
                android:textSize="@dimen/edittext_textsize" >
            </RadioButton>

            <RadioButton
                android:id="@+id/wireless_wep_password_radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/wireless_wep_password_2"
                android:textSize="@dimen/edittext_textsize" >
            </RadioButton>

            <RadioButton
                android:id="@+id/wireless_wep_password_radio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/wireless_wep_password_3"
                android:textSize="@dimen/edittext_textsize" >
            </RadioButton>

            <RadioButton
                android:id="@+id/wireless_wep_password_radio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/wireless_wep_password_4"
                android:textSize="@dimen/edittext_textsize" >
            </RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/wireless_wep_password_edit_1"
                style="@style/EditStyle"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="@dimen/advance_settings_marginLeft"
                android:layout_marginTop="4dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|right"
                android:hint="@string/wireless_wep_password_setting" />

            <EditText
                android:id="@+id/wireless_wep_password_edit_2"
                style="@style/EditStyle"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="@dimen/advance_settings_marginLeft"
                android:layout_marginTop="4dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|right"
                android:hint="@string/wireless_wep_password_setting" />

            <EditText
                android:id="@+id/wireless_wep_password_edit_3"
                style="@style/EditStyle"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="@dimen/advance_settings_marginLeft"
                android:layout_marginTop="4dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|right"
                android:hint="@string/wireless_wep_password_setting" />

            <EditText
                android:id="@+id/wireless_wep_password_edit_4"
                style="@style/EditStyle"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="@dimen/advance_settings_marginLeft"
                android:layout_marginTop="4dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|right"
                android:hint="@string/wireless_wep_password_setting" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>