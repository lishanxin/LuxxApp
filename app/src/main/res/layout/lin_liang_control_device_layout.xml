<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_view_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TitleLayoutStyle" >

        <TextView
            android:id="@+id/text_in_title"
            style="@style/TextInTitleStyle"
            android:text="@string/liu_liang_contal" />

        <ImageView
            android:id="@+id/back"
            style="@style/BackInTitleStyle"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/save"
            style="@style/BackInTitleStyle"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="@string/save"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdddddd"
        android:text="@string/jie_ru_she_bei" />

    <ListView
        android:id="@+id/liu_liang_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>