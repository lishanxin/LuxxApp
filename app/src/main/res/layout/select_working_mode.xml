<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_view_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/TitleLayoutStyle" >

        <TextView
            android:id="@+id/text_in_title"
            style="@style/TextInTitleStyle"
            android:text="@string/select_working_mode_title" />

        <ImageView
            android:id="@+id/back"
            style="@style/BackInTitleStyle"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/selecet_working_mode_next"
            style="@style/MenuInTitleStyle"
            android:layout_height="match_parent"
            android:text="@string/next"
            android:background="@null"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="16dip"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        style="@style/TextStyleInverse"
        android:text="@string/please_select_working_mode" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >

        <RadioButton
            android:id="@+id/ppoe_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radio_bg"
            android:checked="true"
            android:text="@string/exited_ppoe_account" />

        <TextView
            style="@style/TextStyleInverse"
            android:layout_marginLeft="24dp"
            android:text="@string/exited_ppoe_account_summary" />

        <RadioButton
            android:id="@+id/wired_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radio_bg"
            android:text="@string/access_wired_network" />

        <TextView
            style="@style/TextStyleInverse"
            android:layout_marginLeft="24dp"
            android:text="@string/access_wired_network_summary" />

        <RadioButton
            android:id="@+id/wirless_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/radio_bg"
            android:text="@string/access_wirless_network" />

        <TextView
            style="@style/TextStyleInverse"
            android:layout_marginLeft="24dp"
            android:text="@string/access_wirless_network_summary" />
    </RadioGroup>

</LinearLayout>