<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/remoter_edit_bgcolor" >

    <include
        android:id="@+id/remoter_edit_title"
        layout="@layout/title_bar" />

    <net.senink.seninkapp.ui.view.RemoterListView
        android:id="@+id/remoter_edit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remoter_edit_title"
        android:layout_marginBottom="@dimen/remoter_listview_marginbottom"
        android:layout_marginTop="@dimen/lightcontrol_margintop"
        android:cacheColorHint="#ffffffff"
        android:divider="@color/divider_bgcolor"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />

    <RelativeLayout
        android:id="@+id/remoter_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_loading_bg"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/remoter_edit_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/anim_loading" />
    </RelativeLayout>

</RelativeLayout>