<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nexus4_background"
    android:baselineAligned="false"
    android:paddingBottom="@dimen/mesh_vertical_margin"
    android:paddingLeft="@dimen/mesh_horizontal_margin"
    android:paddingRight="@dimen/mesh_horizontal_margin"
    android:paddingTop="@dimen/mesh_vertical_margin" >

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textSize="15sp"
        android:enabled="true"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/mesh_scann_margin"
        android:background="@color/mesh_scanbtn_color"
        android:text="@string/mesh_scan_connect" />

    <ListView
        android:id="@+id/scanListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonScan"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/mesh_scann_margin"
        android:stackFromBottom="false" />

</RelativeLayout>