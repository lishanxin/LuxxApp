<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="true"
        android:layout_marginLeft="@dimen/addbubble_name_marginleft"
        android:layout_weight="1">

        <TextView
            android:id="@+id/timer_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/addbubble_step1_height"
            android:text="20:00"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:layout_marginLeft="4dp"
            android:textColor="@color/light_text_color" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toStartOf="@+id/song_sn"
            android:background="#cdcdcd" />
        <TextView
            android:id="@+id/timer_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/never"
            android:singleLine="true"
            android:textSize="@dimen/addtimer_time_name"
            android:textColor="@color/light_text_color"
            android:textAlignment="center"
            android:gravity="center|start"
            android:layout_weight="4"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/addbubble_name_marginleft"
        android:layout_weight="4">

        <TextView
            android:id="@+id/timer_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/light_currentcolor_width"
            android:minHeight="@dimen/light_currentcolor_height"
            android:textSize="@dimen/addtimer_time_name"
            android:textColor="@color/light_text_color"
            android:singleLine="true"
            android:gravity="center|start"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>